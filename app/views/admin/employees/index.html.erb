<h1>Employee List</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
		<p align="right"><%= link_to "New Employee", new_admin_employee_path, class: "btn btn-primary" %></p>
		<table id="users" class="table table-hover">
			<thead class="thead-dark">
				<tr>
					<th>Name</th>
					<th>Age</th>
          <th>Country</th>
					<th>Gender</th>
          <!-- <th>Organization</th> -->
					<th>Department</th>
					<th>Email</th>
		      <th colspan="2">Actions</th>
		    </tr>
		  </thead>
		  <tbody>
        <% @employees.each do |emp| %>
		    <tr>
          <% if current_user.admin_organization == emp.organization %>
            <td><%= emp.name %></td>
  		      <td><%= emp.age %></td>
            <td><%= emp.country %></td>
  		      <td><%= emp.gender %></td>
            <!-- <td><%#= emp.organization.present? ? emp.organization.name : "-" %></td> -->
            <td><%= emp.departments.pluck(:name).join(' ,') %></td>
  		      <td><%= emp.email %></td>
  		      <td><%= link_to "Edit", edit_admin_employee_path(emp) %></td>
  		      <td><%= link_to "Destroy", admin_employee_path(emp), method: :delete, data: { confirm: "Are you sure?" } %></td>
          <% end %>
        </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
