<h1>Department List</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p align="right"><%= link_to "New Department", new_superadmin_department_path, class: "btn btn-primary" %></p>
      <table id="departments" class="table table-hover">
    	<thead class="thead-dark">
    		<tr>
    			<th>Name</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <!-- <td><%#= link_to "show", superadmin_department_path(user) %></td> -->
          <td><%= link_to "Edit", edit_superadmin_department_path(department) %></td>
          <td><%= link_to "Destroy", superadmin_department_path(department), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>


</div>
</div>
