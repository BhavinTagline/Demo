<h1>Admin Profile</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
		<p align="right"><%= link_to "New Admin", new_superadmin_user_path, class: "btn btn-primary" %></p>
		<table id="users" class="table table-hover">
			<thead class="thead-dark">
				<tr>
					<th>Name</th>
					<th>Age</th>
          <th>Country</th>
					<th>Gender</th>
          <th>Organization</th>
          <th>Department</th>
					<th>Email</th>
		      <th colspan="3">Actions</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @users.each do |user| %>
		    <tr>
		      <td><%= user.name %></td>
		      <td><%= user.age %></td>
          <td><%= user.country %></td>
		      <td><%= user.gender %></td>
          <td><%= user.organization.present? ? user.organization.name : "-" %></td>
          <td><%= user.departments.pluck(:name).join(' ,') %></td>
          <td><%= user.email %></td>
		      <td><%= link_to "show", superadmin_user_path(user) %></td>
		      <td><%= link_to "Edit", edit_superadmin_user_path(user) %></td>
		      <td><%= link_to "Destroy", superadmin_user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
		    </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
